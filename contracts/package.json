{
  "name": "batch-transfer-contracts",
  "version": "1.0.0",
  "description": "Multi-chain batch transfer smart contracts with single-chain architecture",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:ethereum": "hardhat run scripts/deploy-ethereum.js",
    "deploy:bsc": "hardhat run scripts/deploy-bsc.js",
    "deploy:polygon": "hardhat run scripts/deploy-polygon.js",
    "deploy:arbitrum": "hardhat run scripts/deploy-arbitrum.js",
    "deploy:eth-testnet": "hardhat run scripts/deploy-ethereum.js --network goerli",
    "deploy:bsc-testnet": "hardhat run scripts/deploy-bsc.js --network bscTestnet",
    "deploy:polygon-testnet": "hardhat run scripts/deploy-polygon.js --network polygonMumbai",
    "deploy:arbitrum-testnet": "hardhat run scripts/deploy-arbitrum.js --network arbitrumGoerli",
    "verify": "hardhat verify"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.0",
